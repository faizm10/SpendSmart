<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl">
    <h1 class="text-2xl font-semibold text-gray-900 mb-6">New Recurring Payment</h1>

    <div class="bg-white shadow-sm rounded-lg p-6">
      <%= form_with model: @recurring_payment, local: true, class: "space-y-6" do |f| %>
        <% if @recurring_payment.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="text-sm text-red-800">
              <ul class="list-disc list-inside">
                <% @recurring_payment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :transaction_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :transaction_type, options_for_select([["Income", "income"], ["Expense", "expense"]], @recurring_payment.transaction_type), {}, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
        </div>

        <div>
          <%= f.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :amount, step: 0.01, min: 0.01, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :day_of_month, "Day of Month (1-28)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :day_of_month, in: 1..28, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">The day of the month this payment occurs (1-28 only)</p>
        </div>

        <div>
          <%= f.label :next_run_on, "Next Run Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :next_run_on, value: @recurring_payment.next_run_on || Date.current, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :active, checked: @recurring_payment.active.nil? ? true : @recurring_payment.active, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
          <%= f.label :active, "Active", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex items-center justify-end gap-4 pt-4">
          <%= link_to "Cancel", recurring_payments_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= f.submit "Create Recurring Payment", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

