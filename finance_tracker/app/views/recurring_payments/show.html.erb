<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-semibold text-gray-900">Recurring Payment Details</h1>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_recurring_payment_path(@recurring_payment), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
        <%= link_to "Back", recurring_payments_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      </div>
    </div>

    <div class="bg-white shadow-sm rounded-lg p-6">
      <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @recurring_payment.name %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Type</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= @recurring_payment.income? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @recurring_payment.transaction_type.capitalize %>
            </span>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Amount</dt>
          <dd class="mt-1 text-sm font-semibold <%= @recurring_payment.income? ? 'text-green-600' : 'text-red-600' %>">
            <%= @recurring_payment.income? ? '+' : '-' %><%= number_to_currency(@recurring_payment.amount) %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Day of Month</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @recurring_payment.day_of_month %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Next Run Date</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @recurring_payment.next_run_on.strftime("%B %d, %Y") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @recurring_payment.active? %>
              <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 bg-green-100 text-green-800">
                Active
              </span>
            <% else %>
              <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 bg-gray-100 text-gray-800">
                Inactive
              </span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @recurring_payment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

