<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Transactions</h1>
      <p class="mt-2 text-sm text-gray-700">
        Manage your income and expenses
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "New Transaction", new_transaction_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="mt-6 bg-white shadow-sm rounded-lg p-4">
    <%= form_with url: transactions_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :month, "Month", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.month_field :month, value: params[:month] || @current_month.strftime("%Y-%m"), class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :type, options_for_select([["All", ""], ["Income", "income"], ["Expense", "expense"]], params[:type]), {}, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
      </div>
      <div>
        <%= f.submit "Filter", class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      </div>
      <% if params[:month].present? || params[:type].present? %>
        <div>
          <%= link_to "Clear", transactions_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Transactions Table -->
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Date</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Type</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                <th scope="col" class="px-3 py-3.5 text-right text-sm font-semibold text-gray-900">Amount</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% if @transactions.any? %>
                <% @transactions.each do |transaction| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900 sm:pl-6">
                      <%= transaction.date.strftime("%b %d, %Y") %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm">
                      <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= transaction.income? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= transaction.transaction_type.capitalize %>
                      </span>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= transaction.category %>
                    </td>
                    <td class="px-3 py-4 text-sm text-gray-500">
                      <%= transaction.description %>
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-right font-medium <%= transaction.income? ? 'text-green-600' : 'text-red-600' %>">
                      <%= transaction.income? ? '+' : '-' %><%= number_to_currency(transaction.amount) %>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                      <%= link_to "View", transaction, class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
                      <%= link_to "Edit", edit_transaction_path(transaction), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
                      <%= link_to "Delete", transaction, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="py-8 text-center text-sm text-gray-500">
                    No transactions found. <%= link_to "Create your first transaction", new_transaction_path, class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

