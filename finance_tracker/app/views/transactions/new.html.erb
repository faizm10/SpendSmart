<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl">
    <h1 class="text-2xl font-semibold text-gray-900 mb-6">New Transaction</h1>

    <div class="bg-white shadow-sm rounded-lg p-6">
      <%= form_with model: @transaction, local: true, class: "space-y-6" do |f| %>
        <% if @transaction.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="text-sm text-red-800">
              <ul class="list-disc list-inside">
                <% @transaction.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :transaction_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :transaction_type, options_for_select([["Income", "income"], ["Expense", "expense"]], @transaction.transaction_type), {}, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
        </div>

        <div>
          <%= f.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :amount, step: 0.01, min: 0.01, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :date, value: @transaction.date || Date.current, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :category, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :category, required: true, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :description, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="flex items-center justify-end gap-4 pt-4">
          <%= link_to "Cancel", transactions_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= f.submit "Create Transaction", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

