<div class="px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-semibold text-gray-900">Transaction Details</h1>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_transaction_path(@transaction), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
        <%= link_to "Back", transactions_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      </div>
    </div>

    <div class="bg-white shadow-sm rounded-lg p-6">
      <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Type</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 <%= @transaction.income? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= @transaction.transaction_type.capitalize %>
            </span>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Amount</dt>
          <dd class="mt-1 text-sm font-semibold <%= @transaction.income? ? 'text-green-600' : 'text-red-600' %>">
            <%= @transaction.income? ? '+' : '-' %><%= number_to_currency(@transaction.amount) %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Date</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @transaction.date.strftime("%B %d, %Y") %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Category</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @transaction.category %>
          </dd>
        </div>

        <% if @transaction.description.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @transaction.description %>
            </dd>
          </div>
        <% end %>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @transaction.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

